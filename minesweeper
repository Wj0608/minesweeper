import time


class Minesweeper:
    map = []
    def __init__(self):
        # generate empty map
        r = input("Please enter the number of rows: ")
        c = input("Please enter the number of columns: ")
        for i in range(0, int(r)):
            ll = []
            for j in range(0, int(c)):
                ll.append(0)
            self.map.append(ll)
        # insert mines randomly
        m = input("Please enter the number of mines: ")


